<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FunLearnLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#B4D8E7</item>
        <item name="colorPrimaryDark">#56BAEC</item>
        <item name="colorAccent">#56BAEC</item>
        <item name="textColorError">#f73b11</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@drawable/background_base</item>
        <item name="android:textColorHighlight">@color/password_normal</item>
        <item name="android:textColorLink">@color/password_strong</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">SIMPLIFICA Typeface.ttf</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FunLearnLightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#B4D8E7</item>
        <item name="colorPrimaryDark">#56BAEC</item>
        <item name="colorAccent">#56BAEC</item>
        <item name="textColorError">#f73b11</item>
        <item name="android:windowBackground">@drawable/background_base</item>
        <item name="android:textColorHighlight">@color/password_normal</item>
        <item name="android:textColorLink">@color/password_strong</item>
    </style>

    <style name="FunLearnLightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="FunLearnDarkTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">#8F6048</item>
        <item name="android:windowBackground">@color/background2</item>
        <item name="android:colorBackground">@color/background2</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#7EB5D6</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
    </style>

    <style name="FunLearnDarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#B4D8E7</item>
        <item name="colorPrimaryDark">#56BAEC</item>
        <item name="colorAccent">#56BAEC</item>
        <item name="textColorError">#f73b11</item>
        <item name="android:windowBackground">@drawable/background_base</item>
        <item name="android:textColorHighlight">@color/password_normal</item>
        <item name="android:textColorLink">@color/password_strong</item>
    </style>

    <style name="FunLearnDarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
