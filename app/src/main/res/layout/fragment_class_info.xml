<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anchovy.net.funlearn.fragments.ClassInfoFragment">

    <anchovy.net.funlearn.fonts.SimplificaFontTextView
        android:id="@+id/class_activity_class_info_question_total_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="12"
        android:textSize="27sp"
        app:layout_constraintLeft_toRightOf="@+id/lemonMilkFontTextView3"
        app:layout_constraintTop_toBottomOf="@+id/class_activity_class_info_created_date_output"
        android:layout_marginStart="8dp" />

    <anchovy.net.funlearn.fonts.SimplificaFontTextView
        android:id="@+id/class_activity_class_info_member_total_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5/10"
        android:textSize="27sp"
        app:layout_constraintLeft_toRightOf="@+id/lemonMilkFontTextView4"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/class_activity_class_info_question_total_output"
        android:layout_marginStart="8dp" />

    <anchovy.net.funlearn.fonts.LemonMilkFontTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="NAMA KELAS"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/class_activity_class_info_class_title"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:id="@+id/view3"
        style="@style/DividerHorizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_activity_class_info_class_title"
        app:layout_constraintHorizontal_bias="0.0" />

    <anchovy.net.funlearn.fonts.LemonMilkFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIBUAT :"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:id="@+id/lemonMilkFontTextView2"
        android:layout_marginStart="16dp" />

    <anchovy.net.funlearn.fonts.LemonMilkFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUMLAH PERTANYAAN :"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lemonMilkFontTextView2"
        android:id="@+id/lemonMilkFontTextView3"
        android:layout_marginStart="16dp" />

    <anchovy.net.funlearn.fonts.LemonMilkFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUMLAH ANGGOTA :"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lemonMilkFontTextView3"
        android:id="@+id/lemonMilkFontTextView4"
        android:layout_marginStart="16dp" />

    <anchovy.net.funlearn.fonts.SimplificaFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20-07-2017"
        android:textSize="27sp"
        app:layout_constraintLeft_toRightOf="@+id/lemonMilkFontTextView2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:id="@+id/class_activity_class_info_created_date_output"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/class_activity_class_info_show_member_button"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="SHOW MEMBER"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/class_activity_class_info_member_total_output"
        app:layout_constraintTop_toBottomOf="@+id/class_activity_class_info_question_total_output" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/class_activity_class_info_member_list_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lemonMilkFontTextView4"
        app:layout_constraintVertical_bias="0.502" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp">

        <ImageButton
            android:id="@+id/class_activity_class_info_member_list_leave_class"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            android:scaleType="fitStart"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KELUAR"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/class_activity_class_info_member_list_leave_class"
            android:layout_marginTop="8dp"
            android:clickable="false"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
