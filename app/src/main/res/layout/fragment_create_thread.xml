<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anchovy.net.funlearn.fragments.CreateThreadFragment">

    <ImageButton
        android:id="@+id/login_activity_create_blog_fragment_add_image_button"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/add_button_class"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/login_activity_create_blog_fragment_add_image_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_activity_create_blog_fragment_post_title_input"
        android:background="@drawable/create_blog_input_outline"
        android:padding="15dp"
        android:hint="@string/class_activity_announcement_fragment_create_post_title_input"
        android:textAlignment="center"
        android:maxLines="1"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_create_blog_fragment_add_image_button"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_below="@+id/login_activity_create_blog_fragment_post_title_input"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_activity_create_blog_fragment_post_desc_input"
        android:background="@drawable/create_blog_input_outline"
        android:padding="15dp"
        android:hint="@string/class_activity_announcement_fragment_create_post_desc_input"
        android:textAlignment="center"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:maxLines="7"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_create_blog_fragment_post_title_input"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/login_activity_create_blog_fragment_submit_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="@string/class_activity_announcement_fragment_create_post_submit_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_create_blog_fragment_post_desc_input" />
</android.support.constraint.ConstraintLayout>
