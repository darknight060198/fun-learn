<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anchovy.net.funlearn.fragments.StudentTypeSetupFragment">


    <TextView
        android:id="@+id/login_activity_student_type_title1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/login_activity_jenjang"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/login_activity_student_type_title2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/login_activity_student_type_title2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/login_activity_kelas"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/login_activity_student_type_title1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp" />

    <Spinner
        android:id="@+id/login_activity_student_type_spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/login_activity_student_type_spinner2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_student_type_title1" />

    <Spinner
        android:id="@+id/login_activity_student_type_spinner2"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/login_activity_student_type_spinner1"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_student_type_title2" />
</android.support.constraint.ConstraintLayout>
