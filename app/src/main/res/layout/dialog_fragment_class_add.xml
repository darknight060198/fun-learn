<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="150dp"
    android:minWidth="250dp"
    android:background="@color/colorAccent"
    android:padding="20dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_fragment_class_add_name_layout"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dialog_fragment_class_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:maxLength="20"
            android:hint="Nama Kelas"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_fragment_class_add_member_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/dialog_fragment_class_add_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="3"
            android:maxLength="3"
            android:gravity="center"
            android:hint="Maksimal Anggota"
            android:inputType="number"
            android:padding="10dp" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <anchovy.net.funlearn.fonts.LemonMilkFontButton
            android:id="@+id/main_activity_class_fragment_add_ok_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Buat"
            android:textSize="18sp"
            android:textColor="#5DBCD2"
            android:textStyle="bold"/>

        <anchovy.net.funlearn.fonts.LemonMilkFontButton
            android:id="@+id/main_activity_class_fragment_add_cancel_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:textSize="18sp"
            android:text="@string/dialog_fragment_profil_username_change_cancel_button"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>